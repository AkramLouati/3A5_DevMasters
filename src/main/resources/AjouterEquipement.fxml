<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.esprit.controllers.AjouterEquipement">
   <children>
      <AnchorPane layoutX="10.0" layoutY="10.0" prefHeight="400.0" prefWidth="621.0">
         <children>
            <HBox prefHeight="50.0" prefWidth="600.0">
               <children>
                  <Label alignment="CENTER" nodeOrientation="RIGHT_TO_LEFT" text="      Ajouter equipement" textAlignment="CENTER" textFill="#095ecc">
                     <font>
                        <Font name="Cambria" size="31.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <VBox layoutX="14.0" layoutY="50.0" prefHeight="343.0" prefWidth="329.0">
               <children>
                  <Label text="Reference :">
                     <font>
                        <Font name="Cambria" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="referenceTF" prefHeight="0.0" prefWidth="308.0" />
                  <Label text="Nom:">
                     <font>
                        <Font name="Cambria" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="nomTF" prefHeight="25.0" prefWidth="282.0" />
                  <Label text="Categorie :">
                     <font>
                        <Font name="Cambria" size="14.0" />
                     </font>
                  </Label>
                  <RadioButton fx:id="categoriemobile" mnemonicParsing="false" text="Mobile" />
                  <RadioButton fx:id="categoriefixe" mnemonicParsing="false" text="Fixe" />
                  <Label text="Quantité :">
                     <font>
                        <Font name="Cambria" size="14.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="quantiteCB" onAction="#selectQuantite" prefHeight="25.0" prefWidth="144.0" promptText="Ajouter la quantité" />
                  <Label text="Description :">
                     <font>
                        <Font name="Cambria" size="14.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="descriptionTF" prefHeight="121.0" prefWidth="361.0" />
               </children>
            </VBox>
            <Label layoutX="402.0" layoutY="62.0" text="Date ajout equipement :">
               <font>
                  <Font name="Cambria" size="14.0" />
               </font>
            </Label>
            <DatePicker fx:id="dateajout" layoutX="402.0" layoutY="90.0" />
            <Label layoutX="402.0" layoutY="154.0" text="Image :">
               <font>
                  <Font name="Cambria" size="14.0" />
               </font>
            </Label>
            <Button fx:id="telechargerimage" layoutX="538.0" layoutY="150.0" mnemonicParsing="false" onAction="#telechargerImageEquipemnt" text="Télécharger" />
            <Button fx:id="ajoutequipementbtn" layoutX="457.0" layoutY="360.0" mnemonicParsing="false" onAction="#ajouterEquipementAction" text="Ajouter">
               <font>
                  <Font name="Cambria" size="14.0" />
               </font>
            </Button>
            <Button fx:id="navigateequipementbtn" layoutX="538.0" layoutY="360.0" mnemonicParsing="false" onAction="#navigatetoAfficherEquipementAction" text="Navigate">
               <font>
                  <Font name="Cambria" size="14.0" />
               </font>
            </Button>
            <Label fx:id="imageequipement" layoutX="446.0" layoutY="154.0" prefHeight="17.0" prefWidth="86.0" />
            <ImageView fx:id="imagevieweq" fitHeight="150.0" fitWidth="200.0" layoutX="400.0" layoutY="190.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
