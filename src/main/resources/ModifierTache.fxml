<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="554.0" prefWidth="850.0" stylesheets="@css/TacheCss.css"
            xmlns="http://javafx.com/javafx/21" fx:controller="edu.esprit.controllers.ModifierTacheController">
    <TextField fx:id="RECRadioButton" editable="false" layoutX="212.0" layoutY="427.0" prefHeight="46.0"
               prefWidth="354.0"/>
    <HBox layoutX="35.0" layoutY="435.0" prefHeight="31.0" prefWidth="511.0">
        <children>
            <Label prefHeight="23.0" prefWidth="176.0" text="Etat">
                <font>
                    <Font size="18.0"/>
                </font>
                <HBox.margin>
                    <Insets right="30.0"/>
                </HBox.margin>
            </Label>
            <RadioButton fx:id="toDoRadio" onAction="#toDoRadioButton" prefHeight="31.0" prefWidth="110.0" text="To Do"
                         textFill="WHITE">
                <font>
                    <Font size="14.0"/>
                </font>
            </RadioButton>
            <RadioButton fx:id="doingRadio" onAction="#doingRadioButton" prefHeight="31.0" prefWidth="118.0"
                         text="Doing" textFill="WHITE">
                <font>
                    <Font size="14.0"/>
                </font>
            </RadioButton>
            <RadioButton fx:id="doneRadio" onAction="#doneRadioButton" prefHeight="50.0" prefWidth="59.0" text="Done"
                         textFill="WHITE">
                <font>
                    <Font size="14.0"/>
                </font>
            </RadioButton>
        </children>
    </HBox>
    <HBox layoutX="33.0" layoutY="43.0">
        <children>
            <Label prefHeight="32.0" prefWidth="174.0" text="Categorie">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            <ComboBox fx:id="categoryField" prefHeight="32.0" prefWidth="173.0"/>
        </children>
    </HBox>
    <HBox layoutX="33.0" layoutY="95.0">
        <children>

            <Label prefHeight="32.0" prefWidth="173.0" text="Titre">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            <TextField fx:id="titleField" prefHeight="32.0" prefWidth="175.0">
                <font>
                    <Font size="18.0"/>
                </font>
            </TextField>
        </children>
    </HBox>
    <HBox layoutX="35.0" layoutY="145.0">
        <children>

            <Label prefHeight="23.0" prefWidth="172.0" text="PieceJointe">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            <TextField fx:id="attachmentField" prefHeight="34.0" prefWidth="254.0">
                <font>
                    <Font size="18.0"/>
                </font>
                <HBox.margin>
                    <Insets right="5.0"/>
                </HBox.margin>
            </TextField>
            <Button onAction="#browseForImage" prefHeight="36.0" prefWidth="103.0" text="Browse">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>
            <ImageView fx:id="PieceJointeImage" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true"
                       preserveRatio="true"/>
        </children>
    </HBox>
    <HBox layoutX="34.0" layoutY="202.0">
        <children>

            <Label prefHeight="23.0" prefWidth="174.0" text="Date Debut">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            <DatePicker fx:id="startDatePicker" prefHeight="33.0" prefWidth="172.0"/>
        </children>
    </HBox>
    <HBox layoutX="33.0" layoutY="261.0">
        <children>

            <Label prefHeight="23.0" prefWidth="173.0" text="Date Fin">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            <DatePicker fx:id="endDatePicker" prefHeight="31.0" prefWidth="175.0"/>
        </children>
    </HBox>
    <HBox layoutX="34.0" layoutY="332.0" prefHeight="78.0" prefWidth="530.0">
        <children>

            <Label prefHeight="23.0" prefWidth="176.0" text="Description">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            <TextField fx:id="descriptionField" prefHeight="78.0" prefWidth="354.0">
                <font>
                    <Font size="18.0"/>
                </font>
            </TextField>
        </children>
    </HBox>

    <Button layoutX="649.0" layoutY="497.0" onAction="#ModifierTache" prefHeight="32.0" prefWidth="80.0"
            text="Modifier">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Button layoutX="749.0" layoutY="497.0" mnemonicParsing="false" onAction="#Exit" prefHeight="32.0" prefWidth="65.0"
            text="Exit">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
</AnchorPane>
